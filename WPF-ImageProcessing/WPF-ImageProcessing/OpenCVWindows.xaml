<Window x:Class="WPF_ImageProcessing.OpenCVWindows"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="OpenCVWindows" Height="300" Width="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <Button Click="ChangeToFaceDetectionMode">Face Detection</Button>
        <Button Grid.Column="1" Click="ChangeToFaceCamShiftMode">CamShift</Button>
        <Button Grid.Column="2" Click="ChangeToFaceHandGeastureMode">HandGeasture</Button>
        <Button Grid.Row="1">Constructing...</Button>
        <Button Grid.Column="1" Grid.Row="1">Constructing...</Button>
        <Button Grid.Column="2" Grid.Row="1">Constructing...</Button>
        <Button Grid.Row="2">Constructing...</Button>
        <Button Grid.Column="1" Grid.Row="2">Constructing...</Button>
        <Button Grid.Column="2" Grid.Row="2">Constructing...</Button>
    </Grid>
</Window>
